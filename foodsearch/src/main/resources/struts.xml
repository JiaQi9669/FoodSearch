<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<!-- 配置 -->
	<include file="struts_config.xml"></include>

	<package name="struts-base" extends="struts-default">
		<global-allowed-methods>regex:.*</global-allowed-methods>
		<!-- 用户相关 -->
		<action name="User_*" class="com.zqrc.foodsearch.pro.action.UserAction" method="{1}">
			<result name="toLogin">\WEB-INF\Login.jsp</result>
			<result name="toIndex">\WEB-INF\index.jsp</result>
			<result name="toMain">\WEB-INF\main.jsp</result>
			<result name="toMainTable">\WEB-INF\mainTable.jsp</result>
		</action>

		<action name="Standard_*" class="com.zqrc.foodsearch.pro.action.StandardAction" method="{1}">
			<result name="toAddStandard">\WEB-INF\addStandard.jsp</result>
			<result name="toMainTable">\WEB-INF\mainTable.jsp</result>
			<result name="toShowTable">\WEB-INF\showStandard.jsp</result>
		</action>

	</package>
	<!-- 导入通配符标签 -->
	<constant name="struts.enable.DynamicMethodInvocation" value="true"></constant>
</struts>    
